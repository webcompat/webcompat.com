# editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 2

[*.css]
indent_size = 2

[*.py]
indent_size = 4

[*.{md,markdown}]
# Allow <br/> from Markdown
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
